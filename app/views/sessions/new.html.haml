%script{src: "js/jquery.validate.min.js"}
%script{src: "http://code.jquery.com/jquery-1.7.min.js"}

.container-full
  .row
    .col-lg-12.text-center.v-center
      %h1 User Auth App
      %p.lead
      %br
      %br
      .col-lg-12.center-block
        %form#login-form.form-horizontal{style: "width:600px;text-align:center;margin:0 auto;"}
          = form_tag sessions_path do
            .form-group{for: "email"}
              = label_tag :email, nil, class: "control-label"
              = text_field_tag :email, params[:email], :class => "form-control input-lg"
            .form-group{for: "password"}
              = label_tag :password, nil, class: "control-label"
              = password_field_tag :password, nil, class: "form-control input-lg"
  
            %br
            %br
            .actions
              .form-group
                = submit_tag "Login", :class => "btn btn-primary btn-lg btn-block"
                %span.pull-left
                  %a= link_to "Back", :root
                %span.pull-right
                  %a= link_to "Register", new_user_path
      #pswd_info{style: "text-align:left;"}
        %h4 Password must meet the following requirements:
        %ul
          %li#letter.invalid
            At least
            %strong one letter
          %li#capital.invalid
            At least
            %strong one capital letter
          %li#number.invalid
            At least
            %strong one number
          %li#length.invalid
            Be at least
            %strong 8 characters